---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class='flex flex-row justify-center items-center w-full'>
  <nav class='flex flex-row justify-between items-center p-5 w-full max-w-[1360px]'>
    <a href='/' class='flex flex-row items-center text-xl'>{SITE_TITLE}</a>
    <div class='flex flex-row justify-between items-center'>
      <HeaderLink href='/'>Home</HeaderLink>
    </div>
    <div class='flex flex-row justify-end items-center gap-4 text-xl'>
      <a href='https://www.linkedin.com/in/hunghvu/' target='_blank'>
        <img src='/linkedin.svg' />
      </a>
      <a href='https://github.com/hunghvu/hungvu.tech' target='_blank'>
        <img src='/github.svg' />
      </a>
      <label class='daisyui-swap daisyui-swap-rotate'>
        <input type='checkbox' data-toggle-theme='forest' />
        <img class='daisyui-swap-off' src='/sun.svg' />
        <img class='daisyui-swap-on' src='/moon.svg' />
      </label>
    </div>
  </nav>
</header>
