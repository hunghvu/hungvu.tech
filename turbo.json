{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_REMOTE_IMAGE_PROTOCOL",
        "NEXT_PUBLIC_REMOTE_IMAGE_HOSTNAME",
        "NEXT_PUBLIC_REMOTE_IMAGE_PORT",
        "NEXT_PUBLIC_REMOTE_IMAGE_PATH",
        "NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION",
        "NEXT_REQUEST_CMS_ARTICLES_URL",
        "NEXT_REQUEST_CMS_STATIC_ROUTE_METADATA_URL",
        "PAYLOAD_FRONT_END_DOMAIN",
        "PAYLOAD_MONGODB_URI",
        "PAYLOAD_PORT",
        "PAYLOAD_PUBLIC_SERVER_URL",
        "PAYLOAD_SECRET",
        "NODE_ENV"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "update": {}
  }
}