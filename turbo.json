{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "**/tsconfig.json"
  ],
  "globalDotEnv": [
    ".env.development.local",
    ".env.production.local"
  ],
  "globalEnv": [
    "NODE_ENV"
  ],
  "pipeline": {
    "build:cms": {
      "env": [
        "PAYLOAD_FRONT_END_DOMAIN",
        "PAYLOAD_MONGODB_DBNAME",
        "PAYLOAD_MONGODB_URI",
        "PAYLOAD_PORT",
        "PAYLOAD_PUBLIC_SERVER_URL",
        "PAYLOAD_SECRET",
        "PAYLOAD_S3_ACCESS_KEY_ID",
        "PAYLOAD_S3_BUCKET",
        "PAYLOAD_S3_ENDPOINT",
        "PAYLOAD_S3_REGION",
        "PAYLOAD_S3_SECRET_ACCESS_KEY",
        "TS_NODE"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:web": {
      "env": [
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_REMOTE_IMAGE_PROTOCOL",
        "NEXT_PUBLIC_REMOTE_IMAGE_HOSTNAME",
        "NEXT_PUBLIC_REMOTE_IMAGE_PORT",
        "NEXT_PUBLIC_REMOTE_IMAGE_PATH",
        "NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION",
        "NEXT_REQUEST_CMS_ARTICLES_URL",
        "NEXT_REQUEST_CMS_STATIC_ROUTE_METADATA_URL",
        "ANALYZE"
      ],
      "outputs": [
        ".next/**"
      ]
    },
    "build": {
      "dependsOn": [
        "build:cms",
        "build:web"
      ],
      "cache": true,
      "persistent": false
    },
    "dev:cms": {
      "env": [
        "PAYLOAD_FRONT_END_DOMAIN",
        "PAYLOAD_BACK_END_DOMAIN",
        "PAYLOAD_MONGODB_DBNAME",
        "PAYLOAD_MONGODB_URI",
        "PAYLOAD_PORT",
        "PAYLOAD_PUBLIC_SERVER_URL",
        "PAYLOAD_SECRET",
        "PAYLOAD_S3_ACCESS_KEY_ID",
        "PAYLOAD_S3_BUCKET",
        "PAYLOAD_S3_ENDPOINT",
        "PAYLOAD_S3_REGION",
        "PAYLOAD_S3_SECRET_ACCESS_KEY",
        "TS_NODE"
      ]
    },
    "dev:web": {
      "env": [
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_REMOTE_IMAGE_PROTOCOL",
        "NEXT_PUBLIC_REMOTE_IMAGE_HOSTNAME",
        "NEXT_PUBLIC_REMOTE_IMAGE_PORT",
        "NEXT_PUBLIC_REMOTE_IMAGE_PATH",
        "NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION",
        "NEXT_PUBLIC_API_OPENWRT_TOH",
        "NEXT_REQUEST_CMS_ARTICLES_URL",
        "NEXT_REQUEST_CMS_ARTICLES_IGNORE_REDUNDANT_FIELDS_URL",
        "NEXT_REQUEST_CMS_ARTICLES_IN_THE_SAME_SERIES_URL",
        "NEXT_REQUEST_CMS_STATIC_ROUTE_METADATA_URL",
        "NEXT_REQUEST_CMS_OPENWRT_TOH",
        "NEXT_REQUEST_CMS_OPENWRT_TOH_AVAILABLE_VALUES_OF_EACH_FIELD",
        "ANALYZE"
      ]
    },
    "dev": {
      "dependsOn": [
        "dev:cms",
        "dev:web"
      ],
      "cache": false,
      "persistent": true
    },
    "deploy:aws": {
      "cache": false,
      "persistent": false
    },
    "deploy:cloudflare": {
      "cache": false,
      "persistent": false
    },
    "deploy:mongodb-atlas": {
      "cache": false,
      "persistent": false
    },
    "deploy": {
      "dependsOn": [
        "deploy:aws",
        "deploy:cloudflare",
        "deploy:mongodb-atlas"
      ],
      "cache": false,
      "persistent": false
    },
    "lint": {
      "cache": false,
      "persistent": false
    },
    "lint:fix": {
      "cache": false,
      "persistent": false
    },
    "update": {
      "cache": false,
      "persistent": false
    }
  }
}