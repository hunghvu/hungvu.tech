{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "jsx": "react"
  },
  "include": ["server", "collections"],
  "exclude": ["node_modules", "dist", "build"],
  "ts-node": {
    "transpileOnly": true
  }
}
