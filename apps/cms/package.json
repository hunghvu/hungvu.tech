{
  "name": "cms",
  "description": "hungvu.tech content management system",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "dev:cms": "cross-env PAYLOAD_CONFIG_PATH=./payload.config.ts nodemon",
    "build:cms": "pnpm copyfiles && pnpm build:payload && pnpm build:server",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=./payload.config.ts payload build",
    "build:server": "tsc",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"./**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "lint": "eslint .",
    "lint:fix": "eslint --fix --ext .ts,.tsx .",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=./payload.config.ts payload generate:types",
    "update": "pnpm update"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.485.0",
    "@aws-sdk/lib-storage": "^3.485.0",
    "@payloadcms/bundler-vite": "^0.1.5",
    "@payloadcms/db-mongodb": "^1.2.0",
    "@payloadcms/plugin-cloud-storage": "^1.1.1",
    "@payloadcms/richtext-lexical": "^0.1.17",
    "aws-crt": "^1.20.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "payload": "^2.6.0",
    "react": "^18.2.0",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint-config-custom": "workspace:*",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsconfig-custom": "workspace:*",
    "typescript": "5.2.2"
  }
}