{
  "name": "cms",
  "description": "hungvu.tech content management system",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "dev:cms": "cross-env PAYLOAD_CONFIG_PATH=./payload.config.ts nodemon",
    "build:cms": "pnpm copyfiles && pnpm build:payload && pnpm build:server",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=./payload.config.ts payload build",
    "build:server": "tsc",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"./**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "lint": "eslint .",
    "lint:fix": "eslint --fix --ext .ts,.tsx .",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=./payload.config.ts payload generate:types",
    "update": "pnpm update"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "@aws-sdk/lib-storage": "^3.600.0",
    "@breejs/ts-worker": "^2.0.0",
    "@payloadcms/bundler-webpack": "^1.0.7",
    "@payloadcms/db-mongodb": "^1.5.2",
    "@payloadcms/plugin-cloud-storage": "^1.1.3",
    "@payloadcms/richtext-lexical": "^0.1.17",
    "adm-zip": "^0.5.14",
    "aws-crt": "^1.21.3",
    "bree": "^9.2.3",
    "csv-parse": "^5.5.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "payload": "^2.22.0",
    "react": "^18.3.1",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "csv-stringify": "^6.5.0",
    "eslint-config-custom": "workspace:*",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-custom": "workspace:*",
    "typescript": "^5.5.2"
  }
}